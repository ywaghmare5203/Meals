  
     <% if @incorrect_password %>
         $("#error_msg").empty();
         $("#error_msg").html("Old password is not corret ");
     <% end %>

     <% if @user.errors.any? %>
          
         $("#error_msg").html("<%= escape_javascript(render :partial => 'error_msg' ) %>");
