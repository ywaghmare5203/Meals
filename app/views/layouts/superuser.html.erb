<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>

<head>
  <title>MeeldeelCom</title>
  <%= yield(:head) -%>
   <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/css/meeldeel.css" />

</head>
<body>


   <div id="header">
        <div class="group">
            <h1 class="logo-ad logo_bus">
               <a href="/superuser/dashboard"></a>
            </h1>
            <div class="header_info">
                <!--<p class="activity friends"><a href="#" class="icons">Invite Friends</a></p>
                <p class="activity mobapp"><a href="#" class="icons">Mobile App</a></p>-->
                <!-- <span id="signup">Sign up</span>-->
                <!--<p class="login"><a href="#" class="icons" id="login">Login</a></p>-->
                <div class="activity loggedinfo">
                  <div class="right" id="topnav">
        <% if admin_logged_in? %>
          Logged in as <%= current_admin.email %>
         | <%= link_to("logout", admin_logout_url) %>
        <% else %>
           <%= link_to("admin login", admin_login_url) %> |
        <% end %>
      </div>
                </div>

           </div>
        </div>
    </div><!-- header ends-->


  <div class="clear"></div>
  <div class="add-deal group">
  <div id="container">

    <% unless flash[:notice].nil? and flash[:alert].nil? %>
    <div id="messages">
      <%= "<p class=\"notice\">#{flash[:notice]}</p>".html_safe %>
    </div>
    <% end %>

    <%= yield %>
  </div>
  </div>

<%= js_jquery -%>
<%= yield(:script) -%>
<% unless flash[:notice].nil? and flash[:alert].nil? %>
<script type="text/javascript"> $(document).ready(function(){ $("#messages").fadeOut(2000); }); </script>
<% end %>
</body>
</html>