<div class="business_form group">
  
  <h3>Restaurant Owners</h3>
<%= form_for(@restaurant, :as => :restaurant, :url => "/restaurants/create", :method => "post" , :html=>{:class=>"group"}) do |f| %>
    <p>Sign up for an account and start uploading deals right away!</p>
    <p class="warning">Fields marked with * are mandatory</p>

    <% unless admin_logged_in?  %>

          <label>Basic Information *</label>
          <%= f.text_field :your_name, :placeholder => "Your Name" %>
          <%= f.select(:owner_name, [['Restaurant Owner', 'Restaurant Owner'], ['Manager', 'Manager'], ['Supervisor', 'Supervisor'],['Server', 'Server']] , {},{:class=>"lft"}) %>
        <div class="clear"></div>


          <label>Email Address *</label>
          <%= f.text_field :email, :placeholder =>"Email"%>
        <div class="clear"></div>


          <label>Location Information*</label>
          <%= f.text_field :name, :placeholder =>"Restaurant Name"%>   <br>
          <%= f.text_field :address1 , :placeholder =>"Address Line 1"  %> <br>
          <%= f.text_field :address2, :placeholder =>"Address Line 2"%>
          <%= f.text_field :zip_code, :class=>"lft mini", :placeholder =>"Zip Code" %> <br>
          <%= f.text_field :phone , :placeholder => "* Phone Number"%>
          <%= f.text_field :website, :class=>"lft",:placeholder=>"Your Website" %>
        <div class="clear"></div>


         <label>Do you do home delivery?</label>
          <div class="option"><%= f.radio_button :home_delivery, 'yes', :checked => true, :onclick=>"DisableDelivery(0)" %> <span>Yes</span></div>
          <div class="option"><%= f.radio_button :home_delivery, 'no', :onclick=>"DisableDelivery(1)" %> <span>No</span></div>

           <%= f.select(:delivery_staff, @staff_array , {},{:class=>"lft"}) %>

          <div class="clear"></div>



          <label>Can you create a combo meal for us?</label>
          <div class="option-field"><%= f.radio_button :combo_meals, 'yes', :checked => true %> <span>Yes</span></div>
          <div class="option-field"><%= f.radio_button :combo_meals, 'no' %> <span>No</span></div>
        <div class="clear"></div>

        <%= f.text_field :order_day,:placeholder =>"No. of Order placed in a day"  %>


    

        <%= f.select(:cuisine_id, @cuisines_array  , {},{:class=>"lft mini" }) %>

