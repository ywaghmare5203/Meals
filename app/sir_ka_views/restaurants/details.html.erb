<% content_for :script do %>
<%= js_gmap(true) %>
<%= render(:partial => "jsgmap", :locals => { :restaurant => @restaurant }) %>
<% end %>
<% content_for(:head) do %>
<style type="text/css">
#map { width:400px; height: 300px; border: 1px solid #c0c0c0 }
</style>
<% end %>
<div class="m10">
  <span class="h1"><%= @restaurant.name %></span>
</div>

<%= form_for(@restaurant, :as => :restaurant, :url => "/restaurants/#{@restaurant.id}/edit", :method => "post") do |f| %>
<div class="left">
  <%= f.text_field :name, :class => "f18"  %><br />
  <%= f.text_area :description, :rows => 5 %><br />


</div>
<div class="right">
  <div>
    <a href="#" id="switchmap">click where the restaurant is</a> | 
    <a href="#" id="switcharea">click the area of delivery</a>
    <div id="map"></div>
    <%= f.hidden_field :lat %>
    <%= f.hidden_field :lng %>
    <%= f.hidden_field :delivery_area %>
    <div id="maphint"></div>

  </div>

</div>
<div class="clear"></div>
  <%= f.submit "  Save Changes ", :class => "p5 f18" %>
<% end %>
